<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,
    minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <title>抖音视频</title>

    <!-- MySelf -->
    <link rel="stylesheet" type="text/css" href="views/lib/videoDY.css">
</head>
<body>
    <div class="info">
        <p class="sourceType"><%= sourceType %></p>
        <p class="ipUrl"><%= ipUrl %></p>
        <% for(var i = 0; i < list.length; i++) { %>
            <p class="source"><%= list[i] %></p>
            <!-- <video src="http://127.0.0.1:8080<%= list[i] %>" controls onplay="playVideo(this)"></video> -->
        <% } %>
    </div>
    <video id="video" autoplay controls loop onplay="playVideo(this)" onended="endVideo(this)"></video>
    <div class="buttons">
        <img src="views/images/circul.png" alt="整体循环播放" id="videoCircul" onclick="videoCircul()" />
    </div>
    <div class="buttons2">
        <p onclick="preVideo()">上一首</p>
        <p onclick="nextVideo()">下一首</p>
    </div>
    
    <!-- jQuery -->
    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <!-- 圣诞雪花 -->
    <script src="views/lib/snow/snow.js"></script>
    <!-- MySelf -->
    <script src="views/lib/videoDY.js"></script>
</body>
</html>
